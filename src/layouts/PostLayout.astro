---
import Layout from './Layout.astro';

const { post } = Astro.props;
---

<Layout title={`Hyro - ${post.data.title}`}>
  <div class="m-auto max-w-2xl">
    <div class="flex flex-col items-center gap-10 border-b border-zinc-800 pb-10">
      {post.data.image && (
        <img
          src={post.data.image.url}
          alt={post.data.image.alt}
          class="w-full h-96 object-cover rounded-lg"
        />
      )}
      <div class="text-center">
        <h1 class="text-3xl font-bold">{post.data.title}</h1>
        <p class="text-gray-500">{post.data.description}</p>
      </div>
    </div>
    <article class="prose prose-invert py-10">
      <slot />
    </article>
  </div>
</Layout>
