---
import Head from '../components/Head.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
		<Head />
    <title>{title}</title>
  </head>
  <body class="bg-gradient-to-t from-gray-800 via-gray-900 to-black text-white">
    <slot />
  </body>
</html>
<style is:global>
  html,
  body {
    height: 100%;
    width: 100%;
    font-family: 'Rubik', sans-serif;
  }
</style>
