---
import Footer from '@components/Footer.astro';
import Head from '@components/Head.astro';
import '@fontsource/geist-mono';

interface Props {
  title?: string;
}

const { title = 'Astro' } = Astro.props;
---

<html lang="en">
  <Head {title} />
  <body class="font-geist bg-black text-white text-sm">
    <main class="m-auto max-w-2xl my-24 space-y-8 w-[90%] max-sm:my-10">
      <slot />
      <Footer />
    </main>
  </body>
</html>

<style is:global>
  html,
  body {
    height: 100%;
    width: 100%;
  }
</style>
