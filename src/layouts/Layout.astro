---
import Head from '../components/Head.astro'
import Navbar from '../components/Navbar.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <Head />
    <title>{title}</title>
  </head>
  <body class="mx-auto max-w-xl w-[90%]">
    <Navbar />
    <slot />
  </body>
</html>

<style is:global>
  * {
    font-family: "Rubik", sans-serif;
    font-optical-sizing: auto;
  }

  html,
  body {
    margin: 0 auto;
    width: 100%;
  }
</style>
