---
import Head from '../components/Head.astro'
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
import '../styles/global.css'

interface Props {
  title: string
  lang: string
}

const { title, lang } = Astro.props
---

<!doctype html>
<html lang={lang}>
  <Head {title} />
  <body class="bg-[#1c1917] text-[#e6e2e1] min-h-screen">
    <div class="w-[90%] md:w-[70%] lg:w-[55%] xl:w-[45%] 2xl:w-[35%] mx-auto">
      <Navbar />
      <div class="mt-10 mb-20">
        <slot />
      </div>
    </div>
    <Footer />
  </body>
</html>
