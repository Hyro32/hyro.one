---
import { getLangFromUrl, useTranslations } from '../i18n/utils'
import Layout from './Layout.astro'
import { GITHUB_URL } from '../common'
import { Icon } from 'astro-icon/components'

interface Props {
  title: string
  thought: any
}

const lang = getLangFromUrl(Astro.url)
const translation = useTranslations(lang)
const { title, thought } = Astro.props
const thougthDate = new Date(thought.data.date).toISOString().split('T')[0]
---

<Layout {lang} {title}>
  <div class="flex flex-col gap-6 mb-20">
    <div class="flex flex-col">
      <h2 class="text-2xl">{thought.data.title}</h2>
      <span class="text-[#8a7d77]">{thougthDate}</span>
    </div>
    <slot />
  </div>
</Layout>