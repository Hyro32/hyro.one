---
import { getRelativeLocaleUrl } from 'astro:i18n'
import { getLangFromUrl, useTranslations } from '../i18n/utils'
import LangSelector from './LangSelector.astro'

const lang = getLangFromUrl(Astro.url)
const translation = useTranslations(lang)
---

<nav class="flex items-center justify-between w-full pt-20">
  <ul class="flex items-center gap-5">
    <li>
      <a href={getRelativeLocaleUrl(lang, 'home')}>{translation('home')}</a>
    </li>
    <li>
      <a href={getRelativeLocaleUrl(lang, 'blog')}>{translation('blog')}</a>
    </li>
    <li>
      <a href={getRelativeLocaleUrl(lang, 'thoughts')}
        >{translation('thoughts')}</a
      >
    </li>
  </ul>
  <LangSelector />
</nav>
