---
import { getRelativeLocaleUrl } from 'astro:i18n'
import { getLangFromUrl, useTranslations } from '../i18n/utils'
import LangSelector from './LangSelector.astro'

const lang = getLangFromUrl(Astro.url)
const translation = useTranslations(lang)
---

<nav class="flex items-center justify-between w-full pt-20">
  <ul class="flex items-center gap-4">
    <a href={getRelativeLocaleUrl(lang, '/')}>{translation('home')}</a>
    <a href={getRelativeLocaleUrl(lang, 'blog')}>{translation('blog')}</a>
    <a href={getRelativeLocaleUrl(lang, 'thoughts')}>{translation('thoughts')}</a>
  </ul>
  <LangSelector />
</nav>
