---
import { tech, apps } from '@common/index';
import Badge from './Badge.astro';
---

<div class="flex flex-col gap-4 max-sm:text-center">
  <h3>Development</h3>
  <ul class="flex items-center gap-3 flex-wrap max-sm:justify-center">
    {
      tech.map((item) => (
        <li>
          <Badge text={item.text} icon={item.icon} />
        </li>
      ))
    }
  </ul>
</div>
<div class="flex flex-col gap-4 max-sm:text-center">
  <h3>Apps and utils</h3>
  <ul class="flex items-center gap-3 flex-wrap max-sm:justify-center">
    {
      apps.map((item) => (
        <li>
          <Badge text={item.text} icon={item.icon} />
        </li>
      ))
    }
  </ul>
</div>
