---
import { useTranslations, getLangFromUrl } from '../i18n/utils'
import Hashtag from 'astro-heroicons/outline/hashtag.astro'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)

const { headings } = Astro.props
---

<nav class="table-of-content">
  <h2>{t('title-table-of-contents')}</h2>
  <ul>
    {
      headings.map((heading) => (
        <li>
          {heading.depth <= 2 ? (
            <a href={'#' + heading.slug}>{heading.text}</a>
          ) : (
            <a href={'#' + heading.slug} class="table-of-content-sub">
              <Hashtag class="icon" /> {heading.text}
            </a>
          )}
        </li>
      ))
    }
  </ul>
</nav>

<style>
  .table-of-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .table-of-content h2 {
    margin: 0;
    font-size: medium;
  }

  .table-of-content ul {
    list-style: none;
    margin: 0;
    padding: 0;
    font-size: 14px;
  }

  .table-of-content li {
    padding: 2px 0px 2px 10px;
  }

  .table-of-content li:hover {
    background-color: var(--sl-color-accent);
    border-radius: 3px;
    margin: 0;
    color: var(--sl-color-text-invert);
    transition: all 0.2s ease;
  }

  .table-of-content a {
    color: var(--color-text);
    text-decoration: none;
  }

  .table-of-content-sub {
    display: flex;
    align-items: center;
    gap: 5px;
    padding-left: 20px;
  }
</style>
