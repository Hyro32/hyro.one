---
const { post } = Astro.props
---

<a
  href=`blog/${post.slug.split('/')[1]}`
  class="flex flex-col w-full p-2 gap-2 rounded-md divide-y-[1px] shadow-md border-[1px] border-secondary border-opacity-10 dark:bg-secondary"
>
  <div class="flex items-center justify-between text-sm p-2">
    <div class="flex items-center gap-2">
      <img
        src={post.data.avatar}
        alt="avatar"
        class="rounded-md w-4 h-4 object-cover"
      />
      <span>{post.data.author}</span>
    </div>
    <p>{post.data.date.toDateString()}</p>
  </div>
  <div class="flex flex-col p-2">
    <h3 class="text-xl gont-semibold">{post.data.title}</h3>
    <p class="text-sm">{post.data.description}</p>
  </div>
</a>
