---
import { useTranslations, getLangFromUrl } from '../../i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<div
  class="w-full h-60 border-[#30363d] rounded-md bg-red-200 flex-none relative border-2 shadow"
>
  <img
    src="https://github.githubassets.com/images/modules/dashboard/codespaces/bg.jpg"
    alt="org-card-background"
    class="object-cover w-full h-full"
  />
  <div class="flex flex-col justify-between absolute p-4 top-0 w-full h-full">
    <h1 class="text-lg text-white">{t('org-join-title')}</h1>
    <p class="w-3/4 text-stone-400 text-xs leading-5">
      {t('org-join-description')}
    </p>
    <a
      href="https://github.com/sphealhub"
      target="_blank"
      class="border-[#673281] border p-1 rounded-md text-white bg-[#4c4150] hover:opacity-80 transition w-full text-center"
    >
      {t('org-join-us')}
    </a>
  </div>
</div>
