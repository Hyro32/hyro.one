---
import { Icon } from 'astro-icon/components';
import { projects } from '@common/index';
---

<div class="flex flex-col gap-4">
  <h2 class="text-lg font-semibold">Projects</h2>
  <div class="grid grid-cols-2 gap-4 max-sm:grid-cols-1">
    {
      projects.map(({ name, description, github, preview }) => (
        <div class="flex flex-col gap-4 p-3 rounded-md border border-neutral-800 bg-neutral-800/50">
          <div>
            <h3 class="text-lg underline underline-offset-2">{name}</h3>
            <p class="text-sm">{description}</p>
          </div>
          <div class="flex items-center gap-2">
            {github && (
              <a href={github} target="_blank">
                <Icon name="mingcute:github-line" class="w-4 h-4" />
              </a>
            )}
            {preview && (
              <a href={preview} target="_blank">
                <Icon name="mingcute:link-fill" class="w-4 h-4" />
              </a>
            )}
          </div>
        </div>
      ))
    }
  </div>
</div>