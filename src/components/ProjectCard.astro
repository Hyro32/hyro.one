---
import { Icon } from 'astro-icon/components'

interface Props {
  url: string
  name: string
}

const { url, name } = Astro.props
---

<a
  href={url}
  target="_blank"
  class="flex items-start justify-between p-2 rounded-md"
>
  <div class="flex flex-col">
    <h3 class="text-lg font-semibold">{name}</h3>
  </div>
  <Icon name="mdi:link-variant" class="size-5" />
</a>
