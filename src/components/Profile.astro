---
import { socials } from '@common/index';
---

<div class="flex items-baseline justify-between gap-4 pb-5 max-sm:flex-col max-sm:items-center">
  <div class="flex items-center gap-4">
    <img src='/favicon.ico' alt="hyro" class="w-12 h-12 rounded-full" />
    <div class="flex flex-col">
      <h2 class="text-xl font-semibold">Marcos Corrochano Arroyo</h2>
      <span class="text-sm">Studying Systems Engineering at UAH</span>
    </div>
  </div>
  <ul>
    {
      socials.map(({ name, url }) => (
        <li class="inline-block mx-2">
          <a href={url} target="_blank">
            <span class="text-gray-500">{name}</span>
          </a>
        </li>
      ))
    }
  </ul>
</div>