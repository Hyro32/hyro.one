---
import { Icon } from 'astro-icon/components'

const { post } = Astro.props
const postDate = new Date(post.data.date).toISOString().split('T')[0]
---

<a
  href={post.slug.split('/')[1]}
  class="flex items-center justify-between w-1/2 p-4 rounded-md lightSecondary"
>
  <img
    src="https://upload.wikimedia.org/wikipedia/commons/6/6a/JavaScript-logo.png"
    alt={post.data.title}
    class="w-16 h-16 rounded-sm ring-1 ring-gray-500"
  />
  <div class="flex flex-col text-center">
    <h2 class="font-semibold text-xl">{post.data.title}</h2>
    <span>{postDate}</span>
  </div>
  <Icon name="mdi:keyboard-arrow-right" class="size-6" />
</a>
