---
import type { CollectionEntry } from 'astro:content'

interface Props {
  post: CollectionEntry<'blog'>
}

const { post } = Astro.props
const postDate = new Date(post.data.date).toISOString().split('T')[0]
---

<a
  href={`blog/${post.slug.split('/')[1]}`}
  class="flex items-start justify-between w-full py-4 rounded-md"
>
  <div class="flex flex-col gap-1">
    <h2 class="text-xl hover:underline underline-offset-2 decoration-[1px]">
      {post.data.title}
    </h2>
    <p class="text-sm text-[#8a7d77]">{post.data.description}</p>
  </div>
  <span class="text-sm">{postDate}</span>
</a>
