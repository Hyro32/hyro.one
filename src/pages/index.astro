---
import Layout from '../layouts/Layout.astro';
import { MdAlternateEmail } from 'react-icons/md';
import { FaGithub, FaDiscord, FaSteam } from 'react-icons/fa';
---

<Layout title="Mardroide">
  <div class="flex flex-col items-center justify-center w-full h-full">
    <h1 class="text-4xl font-semibold">Mardroide</h1>
    <p class="text-lg text-gray-400">Student and developer</p>
    <ul class="flex items-center gap-4 text-2xl mt-2">
      <li>
        <a href="mailto:marcos.es.dev@gmail.com" class="hover:text-gray-400">
          <MdAlternateEmail />
        </a>
      </li>
      <li>
        <a
          href="https://github.com/Mardroide"
          class="hover:text-gray-400"
          target="_blank"
        >
          <FaGithub />
        </a>
      </li>
      <li>
        <a
          href="https://discord.gg/4WV4Ys65x7"
          class="hover:text-gray-400"
          target="_blank"
        >
          <FaDiscord />
        </a>
      </li>
      <li>
        <a
          href="https://steamcommunity.com/profiles/76561198894604503/"
          class="hover:text-gray-400"
          target="_blank"
        >
          <FaSteam />
        </a>
      </li>
    </ul>
  </div>
</Layout>
